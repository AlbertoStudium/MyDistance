<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity" android:orientation="horizontal">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/layoutizuierdo" android:weightSum="1">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="575dp"
            android:layout_height="47dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/CabeceraOrigen"
            >


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origen"
                android:id="@+id/OrigenTxt"/>

        <EditText android:layout_width="210dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:id="@+id/OrigenCliente"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="575dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/CabeceraDestino"
            >


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destino"
                android:id="@+id/DestinoTxt"/>

        <EditText android:layout_width="210dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:id="@+id/DestinoCliente"/>

    </LinearLayout>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SendButton"
                android:layout_marginTop="10dp"
                android:id="@+id/enviar"/>
        <ImageView
                android:layout_width="305dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:id="@+id/imageView" android:layout_gravity="center_horizontal"
                 android:layout_weight="0.40" android:src="@drawable/distancemaps"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busquedas recientes: "
                android:layout_marginTop="10dp"
                android:id="@+id/Busquedas" android:layout_gravity="center_horizontal"/>

        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:id="@+id/listView"/>
    </LinearLayout>




</LinearLayout>
